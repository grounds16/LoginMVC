@model LoginViewModel
@using Login.DataAccess.EF.Model

@{
    string pageType = Model.CurrentAccount.LoginID > 0 ? "Update Account" : "Create Account";

    ViewData["Title"] = $"Login | {pageType}";
}

<form action="~/Login/AllAccounts" method="post" class="text-center">
   <div class="text-center">
      <div class="row">
         <div class="col-6 offset-3 text-center">
            <h1 class="display-4" style="margin: 20px 0px;">@pageType</h1>
         </div>
      </div>

      <div class="form-row">
         <div class="col-md-6 offset-md-3 form-group">
             <label>Username: </label>
             <input type="text" class="form-control text-center" required name="Username" value="@Model.CurrentAccount.UserName" />
         </div>
         <div class="col-md-6 offset-md-3 form-group">
             <label>Password: </label>
             <input type="text" class="form-control text-center" required name="Password" value="@Model.CurrentAccount.Password" />
         </div>
      </div>
      <p></p>
      <div>
         <div class="col-md-6 offset-md-3">
            <button type="button" class="btn btn-secondary" onclick="location.href = '/Login/AllAccounts'">CANCEL</button>
            <button type="submit" class="btn btn-primary">@pageType</button>
         </div>
      </div>
   </div>
     <input type="hidden" name="LoginID" value="@Model.CurrentAccount.LoginID" /> 
</form>